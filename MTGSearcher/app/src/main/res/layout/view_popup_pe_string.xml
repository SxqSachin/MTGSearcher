<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="pair" type="pers.sxqsachin.mtgsearcher.struct.StringPair"/>
    </data>

    <android.support.percent.PercentRelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_widthPercent="61.8%"
        >

        <View
            android:id="@+id/v_divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="#E3E3E3"

            android:layout_alignParentTop="true"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@{pair.second}"
            android:textSize="14sp"
            android:gravity="center_vertical"

            android:paddingStart="4dp"
            android:paddingEnd="4dp"

            android:layout_below="@id/v_divide_line"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

    </android.support.percent.PercentRelativeLayout>

</layout>
